datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt    DateTime     @default(now())
  daySchedules DaySchedule?
  firstName    String?
  id           String       @id @default(cuid())
  lastName     String?
  password     String
  roles        Json
  updatedAt    DateTime     @updatedAt
  username     String       @unique
}

model Company {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String
  phone     String?
  teams     Team[]
  updatedAt DateTime @updatedAt
}

model Team {
  company   Company? @relation(fields: [companyId], references: [id])
  companyId String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}

model DaySchedule {
  createdAt DateTime  @default(now())
  date      DateTime?
  id        String    @id @default(cuid())
  intervals Json?
  note      String?
  status    Status?   @relation(fields: [statusId], references: [id])
  updatedAt DateTime  @updatedAt
  userId    User?     @relation(fields: [userId], references: [id])
  statusId  String?
  userId    String?
}

model Status {
  createdAt    DateTime     @default(now())
  daySchedules DaySchedule?
  id           String       @id @default(cuid())
  name         String?
  updatedAt    DateTime     @updatedAt
}
